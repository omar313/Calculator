<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omarf.calculator.Fragment.NightThemeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/calculation_text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="right|center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:fontFamily="sans-serif-light"

        android:textSize="45sp"
        android:maxLines="2"
        android:maxLength="50"/>

    <LinearLayout
        android:id="@+id/number_pad_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/result_text_view"
        android:background="@color/colorNumPadBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorNumPadBackgroundNight">

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="7"
                android:textSize="35sp"


                />

            <Button
                android:id="@+id/four_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="4"
                android:textSize="35sp"
               />

            <Button
                android:id="@+id/one_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.02"
                android:onClick="onNumPadClick"
                android:text="1"
                android:textSize="35sp"
                />

            <Button
                android:id="@+id/c_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="c"
                android:textSize="35sp"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorNumPadBackgroundNight">

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="8"
                android:textSize="35sp"
                />

            <Button
                android:id="@+id/five_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="5"
                android:textSize="35sp"
                />

            <Button
                android:id="@+id/two_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="2"
                android:textSize="35sp"
               />
            <Button
                android:id="@+id/zero_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="0"
                android:textSize="35sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorNumPadBackgroundNight">

            <Button
                android:id="@+id/nine_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="9"
                android:textSize="35sp"
               />

            <Button
                android:id="@+id/six_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="6"
                android:textSize="35sp"
              />

            <Button
                android:id="@+id/three_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onNumPadClick"
                android:text="3"
                android:textSize="35sp"
              />

            <Button
                android:id="@+id/dot_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="."
                android:textSize="35sp"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorFunctionPadBackgroundNight"
            android:orientation="vertical"


            >

            <ImageButton
                android:id="@+id/back_btn"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onBackBtnClick"
                android:src="@drawable/ic_keyboard_backspace_black_36dp"
                />

            <Button
                android:id="@+id/m_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="M"
                android:textSize="35sp"
                android:textColor="@color/colorNightFuncButtonTextColor"
                />


            <Button
                android:id="@+id/equal_btn"
                android:layout_width="wrap_content"

                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="="
                android:textSize="36sp"
                android:textColor="@color/colorNightFuncButtonTextColor"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorFunctionPadBackgroundNight"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/divide_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onOperatorButtonClick"
                android:text="รท"

                android:textSize="36sp"
                android:textColor="@color/colorNightFuncButtonTextColor"


                />

            <ImageButton
                android:id="@+id/multiple_btn"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onOperatorButtonClick"
                android:src="@drawable/multiple_black_bold"


                />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onOperatorButtonClick"
                android:text="-"
                android:textSize="36sp"
                android:textColor="@color/colorNightFuncButtonTextColor"/>

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onOperatorButtonClick"
                android:text="+"
                android:textSize="36sp"
                android:textColor="@color/colorNightFuncButtonTextColor"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="25sp"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/calculation_text_view"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-light"
        />

</RelativeLayout>
